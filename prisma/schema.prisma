generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String
  lastName  String
  email     String    @unique
  password  String
  Tickets   Tickets[]
}

model Movie {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  duration    String
  Tickets     Tickets[]
  Showtimes   Showtimes[]
}

model Tickets {
  id             Int      @id @default(autoincrement())
  userId         Int
  movieId        Int
  numberOfTicket Int
  user           User     @relation(fields: [userId], references: [id])
  movie          Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  showtimes      String[]
  movieName      String
  cancellation   Boolean  @default(false)
}

model Showtimes {
  id      Int    @id @default(autoincrement())
  time    String
  movieId Int
  movie   Movie  @relation(fields: [movieId], references: [id], onDelete: Cascade)
}
